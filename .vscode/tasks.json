{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "构建",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-g",
                "-I",
                "headers",
                "src\\main.cpp",
                "src\\file1.cpp",
                "src\\file2.cpp",
                "-o",
                "bin\\main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "运行",
            "type": "process",
            "command": "${workspaceFolder}\\bin\\main.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}